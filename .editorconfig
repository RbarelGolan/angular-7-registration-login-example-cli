# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[{*.bash,*.zsh,*.sh}]
ij_shell_indent_size = 4
ij_shell_tab_width = 4
ij_shell_indent_style = tab
ij_shell_switch_cases_indented = true
ij_shell_keep_column_alignment_padding = true
